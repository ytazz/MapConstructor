  <!-- Save relative poses obtained by scan matching -->
  <MapSaver
    name = "PoseRefSave"
    mapNum = "3"
    saveFormat = "PoseRef"
    PoseRefFile = "../data/nc2021_SM_poseref.csv"
    >
    <Map ID = "1" />
    <Map ID = "2" />
    <Map ID = "3" />
  </MapSaver>

  <!-- G2O file Load & Save file name -->
  <G2OFileIO
    name = "PoseGraph"
    LoadFileName = "../data/before_nc2021.g2o"
    SaveFileName = "../data/after_nc2021_SPROX.g2o"
    />

  <!-- G2O file Save file name  Before optimization -->
  <G2OFileIO
    name = "BeforePGO"
    SaveFileName = "../data/before_nc2021.g2o"
    />

  <!-- G2O file Save file name  After optimization -->
  <G2OFileIO
    name = "AfterPGO"
    SaveFileName = "../data/after_nc2021_SPROX.g2o"
    />

  <!-- Pose-Graph Optimization by G2O -->
  <MapOptimizer
    name     = "PoseGraphOptimization"
    ItrNum  = "0"
    />

  <!-- Convert map data to G2O data -->
  <ToG2OConverter
    name = "ToG2O"
    >
    <Node Tag = "VERTEX_PROX"/>
    <!--
    <Node Tag = "VERTEX_SE2"/>
    -->
    <Odom Tag = "EDGE_SE2"
      poseRefInfoGain  = "30 30 0.003"
      movementInfoGain = "1 1 1"
      infoLimit        = "10 10 10"
      rotScale         = "1.3"
      />
    <!--
      note:
      proxSimInfoGain :  weight of prox-match constraint (Omega in paper)  if positive, proportional weight is used, if negative, constant weight
      switchInfo      :  weight of switch variable (xi in paper)
    -->
    <Loop Tag = "EDGE_SWITCH_PROX"
      proxSimInfoGain = "-0.0002"
      switchInfo       = "0.0002"
      />
    <!--
    -->
      <!--
    <Loop Tag = "EDGE_SWITCH_SE2"
      SE2InfoGain      = "0.0001"
      switchInfo       = "0.01"
      />
    -->
    <!--
    <Loop Tag = "EDGE_M_Est_PROX"
      proxSimInfoGain = "-0.0002"
      robustKernel = "GemanMcClure"
      robustKernelDelta = "1"
      />
    -->
    <!--
    <Loop Tag = "EDGE_M_Est_PROX"
      proxSimInfoGain = "-0.0002"
      robustKernel = "Huber"
      robustKernelDelta = "1"
      />
    -->
  </ToG2OConverter>
  
  <ProxMatcher
    name     = "ProxMatcher"
    clacSimEqMethod = "LDLT"
    maxItr = "30"
    >
    <Match ID = "0"/>
    <Match ID = "1"/>
    <Match ID = "2"/>
    <Match ID = "3"/>
    <Match ID = "4"/>
    <Match ID = "5"/>
  </ProxMatcher>

  <ScanMatcher
  name     = "ScanMatcher"
  clacSimEqMethod = "LDLT"
  heightRange = "0.7 1.0"
  countSkip = "1"
  distSkip = "0.5"
  ICPItr = "10"
  maxItr = "10"
  ignoreRatio = "0.05 0.6"
    >
    <Match/>
  </ScanMatcher>

  <Provisional name = "Provisional"/>
  
  
  <SEQUENCE>
    <task name="MapLoad"/>
    <task name="MapSave_"/>
    <task name="ToG2O Forward"/>
    <task name="BeforePGO Save"/>
    <task name="PoseGraphOptimization"/>
    <task name="AfterPGO Save"/>
    <task name="ToG2O Reverse"/>
    <task name="MapSave"/>
